@model DatabaseFirstApp.Models.Registeration

@{
    ViewBag.Title = "Edit";
}


    <div id="bodyServcs">
        <div class="dashHead">
            EDIT MY PROFILE
        </div>
    

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="editbg">
            <div class="editContent">
                <div class="editForm">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="editLabel">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "labeledit" })

                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "editInput" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                    <div class="editLabel">
                        @Html.LabelFor(model => model.EmailID, htmlAttributes: new { @class = "labeledit" })

                        @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "editInput" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })

                    <div class="editLabel">

                        @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "labeledit" })

                        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "editInput" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })

                    <div class="editLabel">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "labeledit" })

                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "editInput" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    <div class="editLabel">
                        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "labeledit" })

                        @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "editInput" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })

                    <input type="submit" value="Save" class="editBtn" />
                    <input type="button" value="Cancel" class="editBtn" onclick="location.href='@Url.Action("Index","Home")'" />
                </div>
            </div>
        </div>
    }
</div>
